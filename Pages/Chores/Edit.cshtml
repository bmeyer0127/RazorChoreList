@page
@model RazorChoreList.Pages_Chores.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Chore</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Chore.ChoreId" />
            <div class="form-group">
                <label asp-for="Chore.ChoreName" class="control-label"></label>
                <input asp-for="Chore.ChoreName" class="form-control" />
                <span asp-validation-for="Chore.ChoreName" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="Chore.PersonId" class="control-label"></label>
                @* <label asp-for="Chore.Person.Name" class="control-label"></label>
                <input asp-for="Chore.Person.Name" class="form-control" />
                <span asp-validation-for="Chore.Person.Name" class="text-danger"></span> *@
                <div>
                    <select asp-for="Chore.PersonId">
                            @foreach (var item in Model.Person)
                            {
                                <option value="@item.PersonId">@item.Name</option>
                            }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Chore.CompletionStatus" class="control-label"></label>
                <div>
                    <input type="radio" asp-for="Chore.CompletionStatus" value=@Chore.CompletionStatusOptions[0] checked/> @Chore.CompletionStatusOptions[0]<br />
                    <input type="radio" asp-for="Chore.CompletionStatus" value=@Chore.CompletionStatusOptions[1] /> @Chore.CompletionStatusOptions[1]<br />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
